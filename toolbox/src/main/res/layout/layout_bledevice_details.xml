<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/medium">

        <TextView
            style="@style/item_heading"
            android:text="Native Name"/>

        <TextView
            android:id="@+id/nativeName"
            style="@style/item_text"
            android:layout_marginBottom="@dimen/medium"
            android:text="Device's Native Name"/>

        <TextView
            style="@style/item_heading"
            android:text="MAC Address"/>


        <TextView
            android:id="@+id/macAddress"
            style="@style/item_text"
android:layout_marginBottom="@dimen/medium"
            android:text="00:00:00:00:00:00"/>

        <TextView
            style="@style/item_heading"
            android:text="Status"/>

        <TextView
            android:id="@+id/status"
            style="@style/item_text"
android:layout_marginBottom="@dimen/medium"
            android:text="Discovered, Advertising, Disconnected"/>

        <TextView
            android:id="@+id/advNameLabel"
            style="@style/item_heading"
            android:text="@string/adv_name"/>

        <TextView
            android:id="@+id/advName"
            style="@style/item_text"
android:layout_marginBottom="@dimen/medium"
            android:text="Name from Scan record"/>

        <TextView
            android:id="@+id/serviceUuidLabel"
            style="@style/item_heading"
            android:text="@string/service_uuids"/>

        <TextView
            android:id="@+id/serviceUuids"
            style="@style/item_text"
android:layout_marginBottom="@dimen/medium"
            android:text="UUID: 0xFF1D\nData: AABBCCDD"/>

        <TextView
            android:id="@+id/manufacturerIdLabel"
            style="@style/item_heading"
            android:text="@string/manufacturer_id"/>

        <TextView
            android:id="@+id/manufacturerId"
            style="@style/item_text"
android:layout_marginBottom="@dimen/medium"
            android:text="15"/>

        <TextView
            android:id="@+id/manufacturerDataLabel"
            style="@style/item_heading"
            android:text="@string/manufacturer_data"/>

        <TextView
            android:id="@+id/manufacturerData"
            style="@style/item_text"
android:layout_marginBottom="@dimen/medium"
            android:text="90ABCDEF0326"/>

        <TextView
            android:id="@+id/advFlagsLabel"
            style="@style/item_heading"
            android:text="@string/adv_flags"/>

        <TextView
            android:id="@+id/advFlags"
            style="@style/item_text"
android:layout_marginBottom="@dimen/medium"
            android:text="001101001"/>

        <TextView
            android:id="@+id/txPowerLabel"
            style="@style/item_heading"
            android:text="@string/tx_power"/>

        <TextView
            android:id="@+id/txPower"
            style="@style/item_text"
android:layout_marginBottom="@dimen/medium"
            android:text="45"/>


    </LinearLayout>


</ScrollView>